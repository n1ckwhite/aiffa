{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "widgets/*": [
        "./src/widgets/*"
      ],
      "shared/*": [
        "./src/shared/*"
      ],
      "entities/*": [
        "./src/entities/*"
      ],
      "features/*": [
        "./src/features/*"
      ],
      "pages/*": [
        "./src/legacy-pages/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "react-router-dom": [
        "./src/react-router-dom"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "next/types/**/*.tss/**/*.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
